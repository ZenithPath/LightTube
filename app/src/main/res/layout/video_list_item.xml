<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/video_list_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:elevation="12dp"
    app:cardCornerRadius="6dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/video_list_item_iv"
            android:adjustViewBounds="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/video_list_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/video_list_item_iv"
            android:layout_alignTop="@+id/video_list_item_iv"
            android:layout_alignRight="@+id/video_list_item_iv"
            android:layout_alignBottom="@+id/video_list_item_iv"
            android:layout_margin="8dp"
            android:gravity="top|left"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/video_list_item_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/video_list_item_iv"
            android:layout_alignTop="@+id/video_list_item_iv"
            android:layout_alignRight="@+id/video_list_item_iv"
            android:layout_alignBottom="@+id/video_list_item_iv"
            android:layout_margin="8dp"
            android:gravity="bottom|right"
            android:textColor="#ffffff" />

    </RelativeLayout>

</android.support.v7.widget.CardView>