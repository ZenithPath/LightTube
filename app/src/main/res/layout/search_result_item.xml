<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/search_result_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_margin="16dp"
    android:background="@color/colorPrimary"
    android:elevation="12dp"
    app:cardCornerRadius="6dp">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/search_item_iv"
            android:adjustViewBounds="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/search_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/search_item_iv"
            android:layout_alignLeft="@id/search_item_iv"
            android:layout_alignRight="@id/search_item_iv"
            android:layout_alignTop="@id/search_item_iv"
            android:layout_margin="8dp"
            android:gravity="top|left"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/search_item_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/search_item_iv"
            android:layout_alignTop="@+id/search_item_iv"
            android:layout_alignRight="@+id/search_item_iv"
            android:layout_alignBottom="@+id/search_item_iv"
            android:layout_margin="8dp"
            android:gravity="bottom|right"
            android:textColor="#ffffff" />
    </RelativeLayout>

</android.support.v7.widget.CardView>