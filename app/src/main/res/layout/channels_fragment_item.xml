<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/channels_item_cv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="16dp"
        android:elevation="12dp"
        app:cardCornerRadius="6dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/channels_item_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true" />

            <TextView
                android:id="@+id/channels_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/channels_item_iv"
                android:layout_alignLeft="@id/channels_item_iv"
                android:layout_alignRight="@id/channels_item_iv"
                android:layout_alignTop="@id/channels_item_iv"
                android:layout_margin="8dp"
                android:gravity="top|left"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/channels_item_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/channels_item_iv"
                android:layout_alignTop="@+id/channels_item_iv"
                android:layout_alignRight="@+id/channels_item_iv"
                android:layout_alignBottom="@+id/channels_item_iv"
                android:layout_margin="8dp"
                android:gravity="bottom|right"
                android:textColor="#ffffff" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>